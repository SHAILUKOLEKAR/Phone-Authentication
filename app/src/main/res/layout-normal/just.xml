<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/User_phoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:hint="Mobile No."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/User_Verification_No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/User_phoneNo"
        android:padding="10dp"
        android:textSize="15sp"
        android:hint="Verification Code..."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <Button
        android:id="@+id/send_otp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SEND OTP"
        android:textAllCaps="false"
        android:padding="10dp"
        android:layout_below="@+id/User_Verification_No"
        android:textColor="@android:color/background_dark"
        android:textSize="19sp"
        android:layout_margin="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/verify_otp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="VERIFY OTP"
        android:textAllCaps="false"
        android:padding="10dp"
        android:layout_below="@+id/send_otp_btn"
        android:textColor="@android:color/background_dark"
        android:textSize="19sp"
        android:layout_margin="20dp"
        android:textStyle="bold" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/signinbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_below="@+id/verify_otp_btn">
    </com.google.android.gms.common.SignInButton>


</RelativeLayout>